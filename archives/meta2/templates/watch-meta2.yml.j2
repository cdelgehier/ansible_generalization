# {{ ansible_managed }}
---
host: {{ openio_meta2_bind_address }}
port: {{ openio_meta2_bind_port }}
type: meta2
{% if openio_meta2_location | ipaddr %}
location: {{ openio_meta2_location | replace(".", "-") }}
{% else %}
location: {{ openio_meta2_location }}
{% endif %}
checks:
  - {type: tcp}
stats:
  - {type: volume, path: {{ openio_meta2_volume }}}
  - {type: meta}
  - {type: system}
...
