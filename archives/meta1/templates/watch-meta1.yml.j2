# {{ ansible_managed }}
---
host: {{ openio_meta1_bind_address }}
port: {{ openio_meta1_bind_port }}
type: meta1
{% if openio_meta1_location | ipaddr %}
location: {{ openio_meta1_location | replace(".", "-") }}
{% else %}
location: {{ openio_meta1_location }}
{% endif %}
checks:
  - {type: tcp}
stats:
  - {type: volume, path: {{ openio_meta1_volume }}}
  - {type: meta}
  - {type: system}
...
